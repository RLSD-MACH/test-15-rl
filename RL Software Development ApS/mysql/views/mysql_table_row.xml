<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="table_row_tree">
      <field name="name">mysql.table.row.tree</field>
      <field name="model">mysql.table.row</field>
      <field name="arch" type="xml">
        <tree string="Tables" sample="1">
          <field name="id" optional="hide" readonly="1" modifiers="{'readonly':true}"/>
          <field name="name"/>
          <field name="model"/>
          <field name="old_id"/>
          <field name="new_id"/>
          <field name="active" optional="hide" modifiers="{'required':true}"/>
          <field name="company_id" optional="hide" modifiers="{'required':true}"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="table_row_select">
      <field name="name">mysql.table.row.select</field>
      <field name="model">mysql.table.row</field>
      <field name="arch" type="xml">
        <search string="Search">        
          <field name="name" filter_domain="[('name', 'ilike', self)]"/>
          <field name="model" filter_domain="[('model', 'ilike', self)]"/>
                    
          <separator/>
            <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
          <separator/>
          <group expand="0" name="group_by" string="Group By">
            <filter name="create_date" string="Created date" domain="[]" context="{'group_by' : 'create_date'}"/>
            <filter name="model" string="Model" domain="[]" context="{'group_by' : 'model'}"/>
          </group>
        </search>
      </field>
    </record>

