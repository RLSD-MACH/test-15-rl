<?xml version="1.0" encoding="utf-8"?>

<odoo>
   
    <record model="ir.ui.view" id="res_config_settings_view_form">
      <field name="name">res.config.settings.view.form.inherit.inspection.report</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="100"/>
      <field name="inherit_id" ref="base.res_config_settings_view_form" />
      <field name="arch" type="xml">

        <xpath expr="//div[hasclass('settings')]" position="inside">

          <div class="app_settings_block" data-string="Inspection report" string="Inspection report" data-key="inspection_report" groups="account.group_account_manager">
            
            <h2>Inspection report</h2>
            
            <h2>Modules</h2>

            <div class="row mt16 o_settings_container">

              <div class="col-12 col-lg-6 o_setting_box"
                id="inspection_report_portal"
                title=""
              >

                <div class="o_setting_left_pane">

                  <field name="module_inspection_report_portal"/>

                </div>

                <div class="o_setting_right_pane">

                    <label for="module_inspection_report_portal" string="Portal"/>

                    <div class="text-muted">
                        Add portal from inspection report
                    </div>

                </div>

              </div>

            </div>

          </div>

        </xpath>

      </field>
    </record>


</odoo>