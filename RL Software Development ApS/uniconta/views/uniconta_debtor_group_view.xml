<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="uniconta_debtor_group_tree">
      <field name="name">uniconta.debtor.group.tree</field>
      <field name="model">uniconta.debtor.group</field>
      <field name="arch" type="xml">
        <tree string="Tokens" create="false" edit="false" sample="1">

            <field name="id" optional="hide" readonly="1"/>
            <field name="name" optional="show" />
            <field name="res_partner_group_id" optional="show" />
            <field name="company_id" optional="hide" />
          
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="uniconta_debtor_group_select">
      <field name="name">uniconta.debtor.group.select</field>
      <field name="model">uniconta.debtor.group</field>
      <field name="arch" type="xml">
        <search string="Search">        
          <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                    
          <separator/>
            <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
          <separator/>
          <group expand="0" name="group_by" string="Group By">
            <filter name="create_date" string="Created date" domain="[]" context="{'group_by' : 'create_date'}"/>
          </group>
        </search>
      </field>
    </record>

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="action_uniconta_debtor_group_window">
      <field name="name">Debtor Group</field>
      <field name="res_model">uniconta.debtor.group</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    
  </data>
</odoo>