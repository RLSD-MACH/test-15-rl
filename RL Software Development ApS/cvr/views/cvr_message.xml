<!-- cvr.message search view -->
<record id="view_cvr_message_search" model="ir.ui.view">
  <field name="name">cvr.message.view.search</field>
  <field name="model">cvr.message</field>
  <field name="arch" type="xml">
    <search string="Search Login">

      <field name="partner_id" filter_domain="[('partner_id', 'ilike', self)]"/>
      
      <separator/>

      <group expand="0" name="group_by" string="Group By">
          <filter name="create_date" string="Created date" domain="[]" context="{'group_by' : 'create_date'}"/>
          <filter name="partner_id" string="Partner" context="{'group_by': 'partner_id'}"/>
      </group>

    </search>
  </field>
</record>

<!-- cvr.message pivot view -->
<record id="view_cvr_message_pivot" model="ir.ui.view">
  <field name="name">cvr.message.view.pivot</field>
  <field name="model">cvr.message</field>
  <field name="arch" type="xml">
    <pivot string="Pivot Description">
      <!-- Add your fields here -->
      <field name="create_date" optional="show" />
      <field name="partner_id" optional="show" />
      <field name="valid" optional="show"/>
      
    </pivot>
  </field>
</record>

<!-- actions opening views on models -->
    
